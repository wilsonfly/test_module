<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/top" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/bottom" >

        <!-- 中间 进入按键 -->

        <ImageView
            android:id="@+id/imagebutton_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/in" />

        <!-- 上方 设置按键 -->

        <ImageView
            android:id="@+id/imagebutton_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imagebutton_in"
            android:layout_alignRight="@id/imagebutton_in"
            android:src="@drawable/setting" />

        <!-- 下方 退出按键 -->

        <ImageView
            android:id="@+id/imagebutton_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imagebutton_in"
            android:layout_below="@id/imagebutton_in"
            android:src="@drawable/exit" />

        <!-- 左侧 帮助按键 -->

        <ImageView
            android:id="@+id/imagebutton_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imagebutton_in"
            android:layout_toLeftOf="@id/imagebutton_in"
            android:src="@drawable/help" />
        <!-- 右侧 排行榜按键 -->

        <ImageView
            android:id="@+id/imagebutton_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imagebutton_in"
            android:layout_toRightOf="@id/imagebutton_in"
            android:src="@drawable/board" />
    </RelativeLayout>

</LinearLayout>