<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20dp"
            android:layout_row="0"
            android:text="@string/write_swdb_param"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/param_name"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:id="@+id/setparamname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/param_value"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:id="@+id/setparamvalue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/setok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="20dp" />

            <Button
                android:id="@+id/setcancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/cancel"
                android:textSize="20dp" />
        </LinearLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20dp"
            android:layout_row="0"
            android:text="@string/read_swdb_param"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/param_name"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:id="@+id/getparamname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/param_value"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:id="@+id/getparamvalue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:enabled="false"
            android:focusable="false"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/getok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="20dp" />

            <Button
                android:id="@+id/getcancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/cancel"
                android:textSize="20dp" />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>