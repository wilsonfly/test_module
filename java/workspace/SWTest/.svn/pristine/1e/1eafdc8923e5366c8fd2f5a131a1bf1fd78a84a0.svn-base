<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specialConfig"
        android:textSize="25dp" />

    <GridLayout
        android:id="@+id/ethspecialinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <CheckBox
            android:id="@+id/ethspecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="0"
            android:text="@string/ethspecial"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/specialroute"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/netmask"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/specialroute"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/netmask"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="20dp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/pppoespecialinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="50dp" >

        <CheckBox
            android:id="@+id/pppoespecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/pppoespecial"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/specialroute"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/netmask"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/specialroute"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/netmask"
            android:textSize="20dp" />

        <net.sunniwell.app.test.base.view.SWEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="20dp" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="350dp" >

        <Button
            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="25dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/ok"
            android:text="@string/back"
            android:textSize="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/tip"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:textSize="25dp" />

</RelativeLayout>