package NotePad;

import java.io.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;


public class MyNotePad extends JFrame{

	JTextArea jta = null;
	//菜单条
	JMenuBar jmb = null;
	//第一个JMenu
	JMenu jm1 = null;
	//第一个JMenuItem
	JMenuItem jmi1 = null;
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		MyNotePad demo = new MyNotePad();
		
	}

	public MyNotePad()
	{
		jta = new JTextArea();
		jmb = new JMenuBar();
		jm1 = new JMenu("打开(o)");
		jm1.setMnemonic('F');
		jmi1 = new JMenuItem("打开",new ImageIcon("new.png")); 
		
		this.setJMenuBar(jmb);
		jmb.add(jm1);
		jm1.add(jmi1);
		
		this.add(jta);
		this.setTitle("MyNotePad");
		this.setSize(400, 300);
		this.setVisible(true);
	}
}
