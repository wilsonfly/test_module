					image.setMaxHeight(40);
					image.setMaxWidth(140);
				}else{
					image = (ImageView) convertView;
				}
				Bitmap bitmap = BitmapFactory.decodeFile(imagePath.get(location));
				
				return image;
			}
			
			@Override
